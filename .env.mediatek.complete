# MediaTek Environment Configuration for BugSeek - COMPLETE VERSION
# Copy this file to .env and update the values with your MediaTek credentials
# This file includes ALL necessary configurations for both backend and frontend APIs

# ============================================================================
# DATABASE CONFIGURATION (CRITICAL - Fixed absolute path)
# ============================================================================
DATABASE_URL=sqlite:///G:/Projects/Hackathon/Problem2/BugSeek/instance/bugseek.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# ============================================================================
# FLASK APPLICATION CONFIGURATION
# ============================================================================
FLASK_ENV=development
FLASK_DEBUG=True
DEBUG=True
SECRET_KEY=bugseek-hackathon-mediatek-2025-secure-key

# ============================================================================
# MEDIATEK AZURE OPENAI CONFIGURATION (Primary)
# GET THE ACTUAL API KEY FROM MEDIATEK HACKATHON ORGANIZER
# ============================================================================
AZURE_API_KEY=your_actual_jwt_token_from_mediatek_here
USER_ID=your_mtk_employee_id_here
ENDPOINT_URL=https://mlop-azure-gateway.mediatek.inc
MODEL_NAME=aida-gpt-4o-mini
API_VERSION=2024-10-21

# ============================================================================
# ALTERNATIVE/FALLBACK OPENAI CONFIGURATION
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_if_available
AZURE_OPENAI_ENDPOINT=https://mlop-azure-gateway.mediatek.inc
AZURE_OPENAI_API_VERSION=2024-10-21
AZURE_OPENAI_DEPLOYMENT_NAME=aida-gpt-4o-mini

# ============================================================================
# API CONFIGURATION (CRITICAL for frontend-backend communication)
# ============================================================================
API_VERSION=v1
CORS_ORIGINS=*
BACKEND_API_URL=http://localhost:5000

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# ============================================================================
# AI SERVICE CONFIGURATION
# ============================================================================
AI_ANALYSIS_ENABLED=True
AI_MAX_RETRIES=3
AI_REQUEST_TIMEOUT=45
AI_BATCH_SIZE=10
MTK_GATEWAY_TIMEOUT=45

# ============================================================================
# REDIS CONFIGURATION (Optional - for Celery task queue)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# STREAMLIT CONFIGURATION
# ============================================================================
STREAMLIT_SERVER_PORT=8501

# ============================================================================
# MEDIATEK SPECIFIC SETTINGS
# ============================================================================
MTK_ENVIRONMENT=True
MTK_LOG_LEVEL=INFO

# ============================================================================
# HACKATHON CONFIGURATION
# ============================================================================
HACKATHON_MODE=True
HACKATHON_PASSWORD=hackathon2025
DEMO_DATA_ENABLED=True

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/bugseek.log
